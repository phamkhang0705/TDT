@using webNews.Language.Language
@using webNews.Security
@{
    ViewBag.Title = "Quản lý phân quyền";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="white-box">
            <div class="row">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                            <input type="text" placeholder="Tên nhóm quyền" class="form-control" id="keywordToSearch" name="keywordToSearch">
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 pull-right">
                            <button id="btnSearchSubmit" class="btn btn-primary" type="button"><i class="fa fa-search"></i>@(Resource.Btn_Search)</button>
                            <button id="btnSearchRefresh" class="btn btn-primary hidden" type="button"><i class="fa fa-refresh"></i> @(Resource.Btn_Reset_Lang)</button>
                            @if (CheckAuthorizer.Authorize(Permission.ADD))
                            {
                                <button id="btnOpenAdd" class="btn btn-blue hidden" type="button" title="@(Resource.Btn_Add_Lang)"><i class="fa fa-plus-square-o"></i>@(Resource.Btn_Add_Lang)</button>
                            }
                            <input type="hidden" id="txtPerAdd" value="@(CheckAuthorizer.Authorize(Permission.ADD) ? 1 : 0)" />
                            <input type="hidden" id="txtPerEdit" value="@(CheckAuthorizer.Authorize(Permission.EDIT) ?1:0)" />
                            <input type="hidden" id="txtPerDelete" value="@(CheckAuthorizer.Authorize(Permission.DELETE) ?1:0)" />
                        </div>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>
<div class="row">

    <div class="col-md-12">

        <div class="white-box">
            <div class="table">
                <table id="table"> </table>
            </div>
        </div>

    </div>
</div>

<div class="modal fade popup-search" id="modalSearch" tabindex="-1" role="dialog" aria-labelledby="xSearchModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Resource.Search_Lang</h4>
            </div>
            <div class="modal-body clearfix">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-xs-4 control-label">Tên nhóm quyền</label>
                        <div class="col-xs-8">
                            <input type="text" placeholder="Tên nhóm quyền" class="form-control" id="keywordToSearch" name="keywordToSearch">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnSearchSubmit" class="btn btn-primary" type="button"><i class="fa fa-search"></i>@(Resource.Btn_Search)</button>
                <button id="btnSearchRefresh" class="btn btn-primary hidden" type="button"><i class="fa fa-refresh"></i> @(Resource.Btn_Reset_Lang)</button>
                <button type="button" class="btn " data-dismiss="modal"><i class=" fa fa-reply"></i> @(Resource.Btn_Close_Lang)</button>
            </div>

        </div>
    </div>
</div>
<div id="modalAdd">

</div>
